    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch Example",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/lox",
            "args": ["${workspaceFolder}/example.lox"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Launch Open File",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/lox",
            "args": ["${file}"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}